<krpano version="1.20.11" title="Virtual Tour">

	<!-- include the videoplayer interface / skin (with VR support) -->
	<include url="skin/videointerface.xml" />
	<include url="skin/vtourskin.xml" />
	<include url="settings/init.xml" />
	<include url="../plugins/showtext.xml" />

<action name="startup" autorun="onstart">

		if(device.panovideosupport == false,
			error('Sorry, but panoramic videos are not supported by your current browser!');
		  ,
			loadscene(scene_0);
		  );
	</action>

	<scene name="scene_0" title="krpano Panoramic Video Example">

		<!-- include the videoplayer plugin -->
		<!-- <plugin name="video"
		        url.html5="%VIEWER%/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="true"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        /> -->

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<!-- <sphere url="plugin:video" /> -->
			<sphere url="https://soundlink-de-1301174277.cos.eu-frankfurt.myqcloud.com/panorama/ZhuTingQiLianSuoMenDian_ErBaoJianJianCha.jpg" />
		</image>

		<!-- set the default view -->
		<view hlookat="0"  vlookat="0" fovtype="DFOV" fov="130" fov.mobile="90"  fovmin="75" fovmax="150" distortion="0.0" />

		<action name="add_video_sources" >
			videointerface_addsource('3000x1500', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/steel-making-ppe/0.video/video-3000x1500.mp4?v20231211', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/steel-making-ppe/0.video/video-3000x1500-poster.jpg?v20231211');
			videointerface_play('3000x1500');
		</action>

		<hotspot name="product_33" style="skin_hotspotstyle_red" ath="1.2" atv="-12.6" onclick="show_hotspot_alert(product_33)"  onloaded="add_all_the_time_tooltip()" text="工作台" />
		<hotspot name="product_14" style="skin_hotspotstyle_red" ath="28.4" atv="6.2" onclick="show_hotspot_alert(product_14)"  onloaded="add_all_the_time_tooltip()" text="耳镜" />
		<hotspot name="product_34" style="skin_hotspotstyle_red" ath="55" atv="23" onclick="show_hotspot_alert(product_34)"  onloaded="add_all_the_time_tooltip()" text="诊疗椅" />
		<hotspot name="product_33" style="skin_hotspotstyle_red" ath="10" atv="-10" onclick="show_hotspot_alert(product_33)"  onloaded="add_all_the_time_tooltip()" text="工作台" />



	</scene>




</krpano>
