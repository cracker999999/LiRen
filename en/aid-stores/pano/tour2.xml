<krpano version="1.20.11" title="Virtual Tour">

	<!-- include the videoplayer interface / skin (with VR support) -->
	<include url="skin/videointerface.xml" />
	<include url="skin/vtourskin.xml" />
	<include url="settings/init.xml" />
	<include url="../plugins/showtext.xml" />

<action name="startup" autorun="onstart">
		
		if(device.panovideosupport == false,
			error('Sorry, but panoramic videos are not supported by your current browser!');
		  ,
			loadscene(scene_2);
		  );
	</action>
	
	<scene name="scene_2" title="krpano Panoramic Video Example">

		<!-- include the videoplayer plugin -->
		<!-- <plugin name="video"
		        url.html5="%VIEWER%/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="true"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        /> -->

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<!-- <sphere url="plugin:video" /> -->
			<sphere url="https://soundlink-1301174277.cos.ap-beijing.myqcloud.com/panorama/ZhuTingQiLianSuoMenDian_ABRASSRCeShi.jpg" />
		</image>

		<!-- set the default view -->
		<view hlookat="0" vlookat="0" fovtype="DFOV" fov="130" fov.mobile="90" fovmin="75" fovmax="150" distortion="0.0" />
		
		<action name="add_video_sources" >
			videointerface_addsource('3000x1500', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/steel-making-ppe/2.video/video-3000x1500.mp4?v20231211', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/steel-making-ppe/2.video/video-3000x1500-poster.jpg?v20231211');
			videointerface_play('3000x1500');
		</action>

		<hotspot name="product_84" style="skin_hotspotstyle_red" ath="-26" atv="18.7" onclick="show_hotspot_alert(product_84)"  onloaded="add_all_the_time_tooltip()" text="ABR Equipment" />
		<hotspot name="product_85" style="skin_hotspotstyle_red" ath="-11" atv="8" onclick="show_hotspot_alert(product_85)"  onloaded="add_all_the_time_tooltip()" text="Diagnostic bed" />
		<hotspot name="product_40" style="skin_hotspotstyle_red" ath="0.37" atv="0.22" onclick="show_hotspot_alert(product_40)"  onloaded="add_all_the_time_tooltip()" text="Hearing Aid Demonstrator" />
		<hotspot name="product_49" style="skin_hotspotstyle_red" ath="30" atv="-1.8" onclick="show_hotspot_alert(product_49)"  onloaded="add_all_the_time_tooltip()" text="Audiometric Booth Room" />

	</scene>




</krpano>
