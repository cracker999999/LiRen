<krpano version="1.20.11" title="Virtual Tour">

	<!-- include the videoplayer interface / skin (with VR support) -->
	<include url="skin/videointerface.xml" />
	<include url="skin/vtourskin.xml" />
	<include url="settings/init.xml" />
	<include url="../plugins/showtext.xml" />

<action name="startup" autorun="onstart">

		if(device.panovideosupport == false,
			error('Sorry, but panoramic videos are not supported by your current browser!');
		  ,
			loadscene(scene_0);
		  );
	</action>

	<scene name="scene_0" title="krpano Panoramic Video Example">

		<!-- include the videoplayer plugin -->
		<plugin name="video"
		        url.html5="%VIEWER%/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="true"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        />

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<sphere url="plugin:video" />
		</image>

		<!-- set the default view -->
		<view hlookat="0" hlookat.mobile="70" vlookat="0" fovtype="DFOV" fov="140" fov.mobile="90" fovmin="75" fovmax="150" distortion="0.0" />

		<action name="add_video_sources" >
			videointerface_addsource('3000x1500', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/construction/0.video/video-3000x1500.mp4', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/construction/0.video/video-3000x1500-poster.jpg');
			videointerface_play('3000x1500');
		</action>

		<hotspot name="jz_xuankong1" style="skin_hotspotstyle_red" ath="-48.787" atv="-21.907" onclick="show_hotspot_alert(jz_xuankong1)" onloaded="add_all_the_time_tooltip()" text="悬空作业" />
		<hotspot name="jz_xuankong2" style="skin_hotspotstyle_red" ath="-27.421" atv="-39.293" onclick="show_hotspot_alert(jz_xuankong2)" onloaded="add_all_the_time_tooltip()" text="悬空作业" />

		<hotspot name="jz_pingtai" style="skin_hotspotstyle_red" ath="54.516" atv="-23.801" onclick="show_hotspot_alert(jz_pingtai)" onloaded="add_all_the_time_tooltip()" text="操作平台" />

		<hotspot name="jz_jiaocha" style="skin_hotspotstyle_red" ath="80.202" atv="-16.638" onclick="show_hotspot_alert(jz_jiaocha)" onloaded="add_all_the_time_tooltip()" text="交叉作业" />

		<hotspot name="jz_pandeng" style="skin_hotspotstyle_red" ath="74.563" atv="-2.700" onclick="show_hotspot_alert(jz_pandeng)" onloaded="add_all_the_time_tooltip()" text="攀登作业" />

