<krpano version="1.20.11" title="Virtual Tour">

	<!-- include the videoplayer interface / skin (with VR support) -->
	<include url="skin/videointerface.xml" />
	<include url="skin/vtourskin.xml" />
	<include url="settings/init.xml" />
	<include url="../plugins/showtext.xml" />

<action name="startup" autorun="onstart">
		
		if(device.panovideosupport == false,
			error('Sorry, but panoramic videos are not supported by your current browser!');
		  ,
			loadscene(scene_5);
		  );
	</action>
	
	<scene name="scene_5" title="krpano Panoramic Video Example">

		<!-- include the videoplayer plugin -->
		<plugin name="video"
		        url.html5="%VIEWER%/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="true"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        />

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<sphere url="plugin:video" />
		</image>

		<!-- set the default view -->
		<view hlookat="100" vlookat="0" fovtype="DFOV" fov="130" fovmin="75" fovmax="150" distortion="0.0" />
		
		<action name="add_video_sources" >
			videointerface_addsource('3000x1500', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/chemical-industry/5.video/video-3000x1500.mp4', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/chemical-industry/5.video/video-3000x1500-poster.jpg');
			videointerface_play('3000x1500');
		</action>
		<hotspot name="wscl_qitaiwu1" style="skin_hotspotstyle_red" ath="135.237" atv="14.984" onclick="show_hotspot_alert(wscl_qitaiwu1)" onloaded="add_all_the_time_tooltip()" text="有害气态物" />

		<hotspot name="wscl_zhuiluo1" style="skin_hotspotstyle_red" ath="138.097" atv="-4.425" onclick="show_hotspot_alert(wscl_zhuiluo1)" onloaded="add_all_the_time_tooltip()" text="高空坠落" />

	</scene>




</krpano>
