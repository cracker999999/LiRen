<krpano version="1.20.11" title="Virtual Tour">

	<!-- include the videoplayer interface / skin (with VR support) -->
	<include url="skin/videointerface.xml" />
	<include url="skin/vtourskin.xml" />
	<include url="settings/init.xml" />
	<include url="../plugins/showtext.xml" />

<action name="startup" autorun="onstart">
		
		if(device.panovideosupport == false,
			error('Sorry, but panoramic videos are not supported by your current browser!');
		  ,
			loadscene(scene_3);
		  );
	</action>
	
	<scene name="scene_3" title="krpano Panoramic Video Example">

		<!-- include the videoplayer plugin -->
		<plugin name="video"
		        url.html5="%VIEWER%/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="true"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        />

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<sphere url="plugin:video" />
		</image>

		<!-- set the default view -->
		<view hlookat="-30" vlookat="0" fovtype="DFOV" fov="145" fovmin="75" fovmax="150" distortion="0.0" />
		
		<action name="add_video_sources" >
			videointerface_addsource('6000x3000', 'https://soundlink-1301174277.cos.ap-beijing.myqcloud.com/video/test3.mp4', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/chemical-industry/3.video/video-3000x1500-poster.jpg');
			videointerface_play('6000x3000');
		</action>

		<hotspot name="jxdz_zhuiluo1" style="skin_hotspotstyle_red" ath="-75.519" atv="-18.755" onclick="show_hotspot_alert(jxdz_zhuiluo1)" onloaded="add_all_the_time_tooltip()" text="高空坠落" />
		<hotspot name="jxdz_zhuiluo2" style="skin_hotspotstyle_red" ath="-25.256" atv="-26.127" onclick="show_hotspot_alert(jxdz_zhuiluo2)" onloaded="add_all_the_time_tooltip()" text="高空坠落" />
		<hotspot name="jxdz_zhuiluo3" style="skin_hotspotstyle_red" ath="8.644" atv="-14.611" onclick="show_hotspot_alert(jxdz_zhuiluo3)" onloaded="add_all_the_time_tooltip()" text="高空坠落" />

		<hotspot name="jxdz_cjw1" style="skin_hotspotstyle_red" ath="-78.617" atv="-31.856" onclick="show_hotspot_alert(jxdz_cjw1)" onloaded="add_all_the_time_tooltip()" text="冲击物" />

	</scene>




</krpano>
