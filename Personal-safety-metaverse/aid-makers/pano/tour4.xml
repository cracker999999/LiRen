<krpano version="1.20.11" title="Virtual Tour">

	<!-- include the videoplayer interface / skin (with VR support) -->
	<include url="skin/videointerface.xml" />
	<include url="skin/vtourskin.xml" />
	<include url="settings/init.xml" />
	<include url="../plugins/showtext.xml" />

<action name="startup" autorun="onstart">
		
		if(device.panovideosupport == false,
			error('Sorry, but panoramic videos are not supported by your current browser!');
		  ,
			loadscene(scene_4);
		  );
	</action>
	
	<scene name="scene_4" title="krpano Panoramic Video Example">

		<!-- include the videoplayer plugin -->
		<plugin name="video"
		        url.html5="%VIEWER%/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="true"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        />

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<sphere url="plugin:video" />
		</image>

		<!-- set the default view -->
		<view hlookat="0" vlookat="0" fovtype="DFOV" fov="130" fovmin="75" fovmax="150" distortion="0.0" />
		
		<action name="add_video_sources" >
			videointerface_addsource('3000x1500', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/chemical-industry/4.video/video-3000x1500.mp4', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/chemical-industry/4.video/video-3000x1500-poster.jpg');
			videointerface_play('3000x1500');
		</action>


		<hotspot name="hjdm_hanyan1" style="skin_hotspotstyle_red" ath="-17.185" atv="8.100" onclick="show_hotspot_alert(hjdm_hanyan1)" onloaded="add_all_the_time_tooltip()" text="焊烟" />

		<hotspot name="hjdm_hanjiehuguang1" style="skin_hotspotstyle_red" ath="-26.484" atv="0.319" onclick="show_hotspot_alert(hjdm_hanjiehuguang1)" onloaded="add_all_the_time_tooltip()" text="焊接弧光" />

		<hotspot name="hjdm_jinshufeijian1" style="skin_hotspotstyle_red" ath="-26.983" atv="10.193" onclick="show_hotspot_alert(hjdm_jinshufeijian1)" onloaded="add_all_the_time_tooltip()" text="金属飞溅物" />
		<hotspot name="hjdm_jinshufeijian2" style="skin_hotspotstyle_red" ath="9.233" atv="-0.306" onclick="show_hotspot_alert(hjdm_jinshufeijian2)" onloaded="add_all_the_time_tooltip()" text="金属飞溅物" />

		<hotspot name="hjdm_zaoyin1" style="skin_hotspotstyle_red" ath="-18.734" atv="-0.742" onclick="show_hotspot_alert(hjdm_zaoyin1)" onloaded="add_all_the_time_tooltip()" text="噪音" />
		<hotspot name="hjdm_zaoyin2" style="skin_hotspotstyle_red" ath="6.113" atv="6.724" onclick="show_hotspot_alert(hjdm_zaoyin2)" onloaded="add_all_the_time_tooltip()" text="噪音" />

		<hotspot name="hjdm_fenchen1" style="skin_hotspotstyle_red" ath="16.344" atv="4.825" onclick="show_hotspot_alert(hjdm_fenchen1)" onloaded="add_all_the_time_tooltip()" text="粉尘" />

	</scene>




</krpano>
