<krpano version="1.20.11" title="Virtual Tour">

	<!-- include the videoplayer interface / skin (with VR support) -->
	<include url="skin/videointerface.xml" />
	<include url="skin/vtourskin.xml" />
	<include url="settings/init.xml" />
	<include url="../plugins/showtext.xml" />

<action name="startup" autorun="onstart">
		
		if(device.panovideosupport == false,
			error('Sorry, but panoramic videos are not supported by your current browser!');
		  ,
			loadscene(scene_4);
		  );
	</action>
	
	<scene name="scene_4" title="krpano Panoramic Video Example">

		<!-- include the videoplayer plugin -->
		<plugin name="video"
		        url.html5="%VIEWER%/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="true"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        />

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<sphere url="plugin:video" />
		</image>

		<!-- set the default view -->
		<view hlookat="0" vlookat="0" fovtype="DFOV" fov="130" fovmin="75" fovmax="150" distortion="0.0" />
		
		<action name="add_video_sources" >
			videointerface_addsource('3000x1500', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/automobile/4.video/video-3000x1500.mp4', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/automobile/4.video/video-3000x1500-poster.jpg');
			videointerface_play('3000x1500');
		</action>

		<hotspot name="tzcj_qiwu1" style="skin_hotspotstyle_red" ath="-99.344" atv="-0.372" onclick="show_hotspot_alert(tzcj_qiwu1)" onloaded="add_all_the_time_tooltip()" text="漆雾" />
		<hotspot name="tzcj_qiwu2" style="skin_hotspotstyle_red" ath="70.103" atv="2.529" onclick="show_hotspot_alert(tzcj_qiwu2)" onloaded="add_all_the_time_tooltip()" text="漆雾" />

		<hotspot name="tzcj_youqi1" style="skin_hotspotstyle_red" ath="-33.486" atv="3.670" onclick="show_hotspot_alert(tzcj_youqi1)" onloaded="add_all_the_time_tooltip()" text="油漆" />
		<hotspot name="tzcj_youqi2" style="skin_hotspotstyle_red" ath="-17.935" atv="1.164" onclick="show_hotspot_alert(tzcj_youqi2)" onloaded="add_all_the_time_tooltip()" text="油漆" />

		<hotspot name="tzcj_zhengqi1" style="skin_hotspotstyle_red" ath="-2.735" atv="-14.971" onclick="show_hotspot_alert(tzcj_zhengqi1)" onloaded="add_all_the_time_tooltip()" text="有机蒸气" />

		<hotspot name="tzcj_zaoyin1" style="skin_hotspotstyle_red" ath="30.649" atv="-4.812" onclick="show_hotspot_alert(tzcj_zaoyin1)" onloaded="add_all_the_time_tooltip()" text="噪音" />


	</scene>




</krpano>
