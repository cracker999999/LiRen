<krpano version="1.20.11" title="Virtual Tour">

	<!-- include the videoplayer interface / skin (with VR support) -->
	<include url="skin/videointerface.xml" />
	<include url="skin/vtourskin.xml" />
	<include url="settings/init.xml" />
	<include url="../plugins/showtext.xml" />

<action name="startup" autorun="onstart">
		
		if(device.panovideosupport == false,
			error('Sorry, but panoramic videos are not supported by your current browser!');
		  ,
			loadscene(scene_3);
		  );
	</action>
	
	<scene name="scene_3" title="krpano Panoramic Video Example">

		<!-- include the videoplayer plugin -->
		<!-- <plugin name="video"
		        url.html5="%VIEWER%/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="true"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        /> -->

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<!-- <sphere url="plugin:video" /> -->
			<sphere url="https://soundlink-1301174277.cos.ap-beijing.myqcloud.com/panorama/ErMoYingYongChangJing_FuWu.jpg" />
		</image>

		<!-- set the default view -->
		<view hlookat="0" hlookat.mobile="30" vlookat="0" fovtype="DFOV" fov="130" fov.mobile="90" fovmin="75" fovmax="150" distortion="0.0" />
		
		<action name="add_video_sources" >
			videointerface_addsource('3000x1500', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/preparation-tablet/3.video/video-3000x1500.mp4', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/preparation-tablet/3.video/video-3000x1500-poster.jpg');
			videointerface_play('3000x1500');
		</action>

		<hotspot name="bz_zy1" style="skin_hotspotstyle_red" ath="134.133" atv="22.557" onclick="show_hotspot_alert(bz_zy1)" onloaded="add_all_the_time_tooltip()" text="噪音" />
		<hotspot name="bz_zy2" style="skin_hotspotstyle_red" ath="-128.891" atv="20.801" onclick="show_hotspot_alert(bz_zy2)" onloaded="add_all_the_time_tooltip()" text="噪音" />
		<hotspot name="bz_zy3" style="skin_hotspotstyle_red" ath="37.648" atv="12.539" onclick="show_hotspot_alert(bz_zy3)" onloaded="add_all_the_time_tooltip()" text="噪音" />
		<hotspot name="bz_zy4" style="skin_hotspotstyle_red" ath="103.00" atv="8.421" onclick="show_hotspot_alert(bz_zy4)" onloaded="add_all_the_time_tooltip()" text="噪音" />

	</scene>




</krpano>
