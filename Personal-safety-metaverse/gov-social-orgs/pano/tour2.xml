<krpano version="1.20.11" title="Virtual Tour">

	<!-- include the videoplayer interface / skin (with VR support) -->
	<include url="skin/videointerface.xml" />
	<include url="skin/vtourskin.xml" />
	<include url="settings/init.xml" />
	<include url="../plugins/showtext.xml" />

<action name="startup" autorun="onstart">
		
		if(device.panovideosupport == false,
			error('Sorry, but panoramic videos are not supported by your current browser!');
		  ,
			loadscene(scene_2);
		  );
	</action>
	
	<scene name="scene_2" title="krpano Panoramic Video Example">

		<!-- include the videoplayer plugin -->
		<!-- <plugin name="video"
		        url.html5="%VIEWER%/plugins/videoplayer.js"
		        pausedonstart="false"
		        loop="true"
		        volume="1.0"
		        onloaded="add_video_sources();"
		        /> -->

		<!-- use the videoplayer plugin as panoramic image source -->
		<image>
			<!-- <sphere url="plugin:video" /> -->
			<sphere url="https://soundlink-1301174277.cos.ap-beijing.myqcloud.com/panorama/ZhengFuJiSheHuiZuZhi_SheHuiZuZhi.jpg" />
		</image>

		<!-- set the default view -->
		<view hlookat="0" vlookat="0" fovtype="DFOV" fov="130" fov.mobile="90" fovmin="75" fovmax="150" distortion="0.0" />
		
		<action name="add_video_sources" >
			videointerface_addsource('3000x1500', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/construction/2.video/video-3000x1500.mp4', 'https://file-sjune.oss-cn-hangzhou.aliyuncs.com/PSD/construction/2.video/video-3000x1500-poster.jpg');
			videointerface_play('3000x1500');
		</action>

		<hotspot name="sn_linbian1" style="skin_hotspotstyle_red" ath="38.110" atv="-7.266" onclick="show_hotspot_alert(sn_linbian1)" onloaded="add_all_the_time_tooltip()" text="临边作业" />
		<hotspot name="sn_linbian2" style="skin_hotspotstyle_red" ath="-79.050" atv="3.786" onclick="show_hotspot_alert(sn_linbian2)" onloaded="add_all_the_time_tooltip()" text="临边作业" />

		<hotspot name="sn_pingtai" style="skin_hotspotstyle_red" ath="-6.950" atv="-1.190" onclick="show_hotspot_alert(sn_pingtai)" onloaded="add_all_the_time_tooltip()" text="操作平台" />

		<hotspot name="sn_dongkou1" style="skin_hotspotstyle_red" ath="93.036" atv="3.522" onclick="show_hotspot_alert(sn_dongkou1)" onloaded="add_all_the_time_tooltip()" text="洞口作业" />
		<hotspot name="sn_dongkou2" style="skin_hotspotstyle_red" ath="111.120" atv="30.141" onclick="show_hotspot_alert(sn_dongkou2)" onloaded="add_all_the_time_tooltip()" text="洞口作业" />



	</scene>




</krpano>
